import java.awt.Point;

/**
 * clase CocheDeportivo
 * 
 * @author
 * @version
 */

public class CocheDeportivo extends Coche {
	// sin atributos, solo los heredados

	public CocheDeportivo(String conductor, String tipo, String color) {
		super(conductor, tipo, color, new Point(0, 200));

		// TODO Auto-generated constructor stub
	}

	@Override
	public void avanza() {


		if(Math.random() > 0.7)
			Point posicionCoche = super.getPosicion();
		posicionCoche.setLocation(posicionCoche.getX() + 50, posicionCoche.getY());
		// TODO Auto-generated method stub

	}

}
